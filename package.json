{
  "name": "react-copy-to-clipboard-lite",
  "version": "0.0.1",
  "description": "Tiny, modern React 19+ clipboard utility with tiered fallback and metadata.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rajudandigam/react-copy-to-clipboard-lite.git"
  },
  "bugs": {
    "url": "https://github.com/rajudandigam/react-copy-to-clipboard-lite/issues"
  },
  "homepage": "https://github.com/rajudandigam/react-copy-to-clipboard-lite#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "react copy to clipboard",
    "clipboard",
    "react 19",
    "useActionState",
    "strictmode safe",
    "copy button",
    "nextjs clipboard"
  ],
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsup": "^8.0.0",
    "vitest": "^1.3.0",
    "@types/react": "^18.2.0"
  }
}
