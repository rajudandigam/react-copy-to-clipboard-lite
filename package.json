{
  "name": "react-copy-to-clipboard-lite",
  "version": "1.0.2",
  "private": false,
  "description": "Tiny, modern React 19+ clipboard utility with tiered fallback and metadata.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajudandigam/react-copy-to-clipboard-lite.git"
  },
  "bugs": {
    "url": "https://github.com/rajudandigam/react-copy-to-clipboard-lite/issues"
  },
  "homepage": "https://github.com/rajudandigam/react-copy-to-clipboard-lite#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup && rm -f dist/*.d.cts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:pw": "playwright test --config playwright/playwright.config.ts",
    "test:all": "npm run typecheck && npm run build && npm run test && npm run test:pw && npm run size && npm run check:bundle",
    "prepublish:checks": "npm run typecheck && npm run test && npm run build && npm run size && npm run check:bundle",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run prepublish:checks",
    "prepare": "npm run build",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "dev:demo": "vite --config demo/vite.config.ts",
    "build:demo": "npm run build && vite build --config demo/vite.config.ts",
    "size": "size-limit",
    "check:bundle": "grep -q \"react\" dist/core.mjs && echo \"âš  React found in core bundle\" && exit 1 || echo \"Bundle clean\"",
    "publish": "npm publish --access public --provenance"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "1.5 KB"
    },
    {
      "path": "dist/react.mjs",
      "limit": "1.8 KB"
    }
  ],
  "keywords": [
    "react",
    "react copy to clipboard",
    "clipboard",
    "react 19",
    "useActionState",
    "strictmode safe",
    "copy button",
    "nextjs clipboard",
    "copy-to-clipboard",
    "react clipboard hook",
    "clipboard api",
    "react copy button",
    "tiny react library",
    "clipboard fallback",
    "execCommand fallback"
  ],
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.2",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^1.3.0",
    "jsdom": "^25.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "size-limit": "^12.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1",
    "vitest": "^1.3.0"
  }
}
